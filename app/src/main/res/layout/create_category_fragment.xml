<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".fragments.CreateCategoryFragment">

    <EditText
        android:id="@+id/create_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_edit_text"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        android:hint="@string/name"
        android:inputType="text"/>

    <com.thetechshrine.expensemanager.components.views.ExtendedButton
        android:id="@+id/create_category_save"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_primary_button_outline"
        android:textColor="@color/colorPrimary"
        android:text="@string/save"
        android:textStyle="bold"
        app:font_weight="SemiBold" />

</LinearLayout>